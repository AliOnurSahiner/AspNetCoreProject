<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/content/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    @*NavBar*@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            
                <a class="navbar-brand" href="#">AspNetCore Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav" style="margin-left:650px">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" aria-current="page" href="#">Ürün İşlemleri@*<span class="sr-only">(current)</span*@</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" aria-current="page" href="#">Kategori İşlemleri</a>
                        </li>
                    </ul>
                </div>
           
        </div>
    </nav>
    @*NavBar*@
    <div class="mt-2">
        <div class="container-fluid"> @*Aşağıdaki scrollbar'ın çıkmasını engellmek için yapıldı.*@
             @RenderBody()
        </div>
    </div>
    <script src="~/jquery/jquery.min.js"></script>
    @RenderSection("Javascript",false) @*// Bu dosyayı ister kullan ister kullanma demek.*@
</body>
</html>
