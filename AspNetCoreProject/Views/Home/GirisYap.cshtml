@using AspNetCoreProject.Models
@model KullaniciGirisModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@addTagHelper AspNetCoreProject.TagHelpers.*,AspNetCoreProject

@using (Html.BeginForm("GirisYap", "Home", FormMethod.Post))
{
    <form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto shadow">
        <div class="form-group">
            <label>Kullanıcı Adı :</label>
           <span asp-validation-for="@Model.KullaniciAd" class="text-danger"></span>  @*validation messageları göstermek için span kullanılır*@
            <input type="text" asp-for=KullaniciAd value="" class="form-control" />  @* Ya da burada name de model içindeki ad ile maplenir yani  name =asp-for !  <input type="text" name="KullaniciAd" value="" class="form-control" />*@
        </div>

        <div class="form-group">
            <label>Parola:</label>
             <span asp-validation-for="@Model.Sifre" class="text-danger"></span>
            <input type="password" asp-for=Sifre value="" class="form-control" />
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for=BeniHatirla value="" class="form-check-input" />
            <label asp-for=BeniHatirla class="form-check-label">Beni Hatırla</label>
        </div>
        <div asp-validation-summary=All></div> @*validationların hepsini  ekranda gösterir*@
        <div class="form-group">
            <button type="submit" class="btn btn-block  btn-info">Giriş Yap</button>
        </div>

    </form>

}

@section Javascript{  @* Bunlar clientside validation için yazıldı.*@
       <script src="~/jquery-valid/jquery.validate.min.js"></script>
       <script src="~/jquery-unob/jquery.validate.unobtrusive.min.js"></script>     
}
