@model List<Urun>
<a asp-action="Ekle" asp-controller="Home" asp-area="Admin" class=" btn btn-primary btn-sm my-2">Ürün Ekle</a>
<table class="table table-sm table-bordered table-stripped table-hover">
    <tr>
        <th>ID</th>
        <th>Ürün Resmi</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Resim</td>
            <td>@item.Ad</td>
            <td>@item.Fiyat</td>
            <td>
                <a asp-action="Guncelle" asp-area="Admin" asp-route-id="@item.Id" asp-controller="Home" class="btn btn-warning bt-sm">Güncelle</a>   @*asp-route-id Id taşımak için gerekli bir tag helperdır.*@
            </td>

            <td>
                <a asp-action="Sil" asp-area="Admin" asp-route-id="@item.Id" asp-controller="Home" class="btn btn-danger bt-sm">Sil</a>   @*asp-route-id Id taşımak için gerekli bir tag helperdır.*@
            </td>
        </tr>

    }
</table>

