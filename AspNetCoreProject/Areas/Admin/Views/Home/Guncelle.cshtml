@model UpdateUrunModel

<form asp-action="Guncelle" asp-controller="Home" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    @*enctype yazmamızın nedeni file post olduğunda null göndermemek*@

    <input type="hidden" asp-for="UrunId" />
    <div class="form-group">
        <label>Ürünün Adı:</label>
        <span asp-validation-for="Ad" class="text-danger"></span>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürünün Fiyatı:</label>
        <span asp-validation-for="Fiyat" class="text-danger"></span>
        <input asp-for="Fiyat" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürünün Resmi:</label>
        <span></span>
        <input type="file" asp-for="Resim" class="form-control-file" />
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Index" asp-area="Admin" asp asp-controller="Home" class="btn btn-warning">Geri Dön</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
@section Javascript{
  @* Bunlar clientside validation için yazıldı.*@
<script src="~/jquery-valid/jquery.validate.min.js"></script>
<script src="~/jquery-unob/jquery.validate.unobtrusive.min.js"></script>
}